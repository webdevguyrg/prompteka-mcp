{
  "name": "prompteka-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Prompteka - enables AI assistants to read and write prompts",
  "type": "module",
  "main": "dist/server.js",
  "exports": {
    ".": "./dist/server.js"
  },
  "bin": {
    "prompteka-mcp": "./dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "node --loader ts-node/esm --no-warnings=ExperimentalWarning src/server.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "prompteka",
    "ai",
    "assistant",
    "prompt-management"
  ],
  "author": "Robert Grow",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "better-sqlite3": "^9.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
